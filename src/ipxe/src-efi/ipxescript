#!ipxe
isset ${net0/ip} && ifopen && goto nextserverset ||
isset ${net1/ip} && ifopen && goto nextserverset ||
isset ${net2/ip} && ifopen && goto nextserverset ||
dhcp && goto nextserverset || gotosetserv
:setserv
echo -n Please enter tftp server: && read next-server && goto bootme || goto setserv
:bootme
goto nextserverset
:nextserverset
isset ${proxydhcp/next-server} && set next-server ${proxydhcp/next-server} ||
isset ${next-server} && goto netboot || goto setserv
:netboot
chain tftp://${next-server}/default.ipxe || exit
