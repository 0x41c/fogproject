#!/bin/bash
oIFS=$IFS
IFS='
'
mac=$1
web=$2
usleep 3000000
while :; do
    fle="/tmp/status.fog"
    status=$(tail -n 2 $fle 2>/dev/null | head -n 1 2>/dev/null)
    cat /dev/null > $fle 2>/dev/null
    if [[ -n $mac ]]; then
        status=$(echo $status | base64)
        res=$(wget -T 3 -O - --post-data="mac=$mac&status=$status" http://${web}service/progress.php >/dev/null 2>&1)
        usleep 3000000
    fi
done
